{
  "name": "pijamas",
  "description": "A BDD assertion library for D",
  "copyright": "Copyright © 2020, Pedro Tacla Yamada",
  "license": "MIT",
  "authors": [
    "Pedro Tacla Yamada",
    "Luis Panadero Guardeño"
  ],
  "configurations": [
    {
      "name": "pijamas",
      "targetType": "library"
    },
    {
      "name": "unittest",
      "targetType": "library",
      "importPaths": ["source", "tests"],
      "sourcePaths": ["source", "tests"],
      "dependencies": {
        "silly": {"version": "~>1.0", "optional": true, "default": true}
      }
    }
  ],
  "buildTypes": {
    "docs": {
      "buildOptions": [
        "syntaxOnly"
      ],
      "dflags": [
        "-c",
        "-Dddocs"
      ],
      "dflags-dmd": [
        "-preview=markdown"
      ]
    }
  },
  "toolchainRequirements": {
    "dub": ">=1.20.0",
    "frontend": ">=2.091"
  }
}
