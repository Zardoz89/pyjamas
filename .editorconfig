# Editor config ripped from dlang repository : https://github.com/dlang/dlang.org/blob/master/.editorconfig
root = true

[*.{c,h,d,di,dd,ddoc,json,yml,sh}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

[*.d]
dfmt_split_operator_at_line_end = true
dfmt_brace_style = otbs
dfmt_template_constraint_style = always_newline

